{
    "editor.tabSize": 4,
    "editor.rulers": [
        120
    ],
    "python.pythonPath": "./venv/bin/python",
    "python.autoComplete.extraPaths": [
        "./venv",
        "./venv/lib/python2.7/site-packages"
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--load-plugins",
        "pylint_django",
        "--max-line-length=120"
    ]
}
